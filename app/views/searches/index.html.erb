<%= form_tag(searches_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Photos" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<% if params[:search].present? %>
  <% @searches.each do |search| %>
  <%= link_to image_tag("https://farm#{search.farm}.staticflickr.com/#{search.server}/#{search.id}_#{search.secret}.jpg"), "https://farm#{search.farm}.staticflickr.com/#{search.server}/#{search.id}_#{search.secret}.jpg"%>
  <% end %>
<% end %>